<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ReplyFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagefr2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="350dp"
        android:layout_marginTop="7dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Nom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imagefr2"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="60dp"
        android:textStyle="bold"
        android:text="lalll"/>


    <TextView
        android:id="@+id/userName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imagefr2"
        android:layout_alignBottom="@+id/imagefr2"
        android:layout_marginEnd="60dp"
        android:text="lalal" />

    <TextView
        android:id="@+id/close2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:drawableLeftCompat="@drawable/ic_baseline_close_24" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/compter2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagefr2"
        android:layout_marginTop="74dp"
        app:counterEnabled="true"
        app:counterMaxLength="140">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etComposeFrag2"
            android:layout_width="500dp"
            android:layout_height="346dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="What's happening"
            android:inputType="textMultiLine"
            android:minLines="5" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/compter2"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="9dp"
        android:backgroundTint="#1DA1F2"
        android:elevation="5dp"
        android:text="@string/reply"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:drawableLeftCompat="@drawable/image_bouton" />
</RelativeLayout>