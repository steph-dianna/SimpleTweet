<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvBody"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/ivProfile"
        android:textStyle="bold"
        tools:text="rpandey1234" />

    <TextView
        android:id="@+id/heure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvBody"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tvScreenName"
        tools:text="1h" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/ivProfile"
        android:autoLink="all"
        tools:text="This is my tweet!!" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/Nom"
        android:text="TextView" />


    <ImageView
        android:id="@+id/imVideo"
        android:layout_width="205dp"
        android:layout_height="118dp"
        android:visibility="gone"
        android:layout_below="@+id/tvBody"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imVideo"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="8dp"
        android:text="10"
        app:drawableLeftCompat="@drawable/message"
        tools:text="0" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imVideo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView2"
        android:drawablePadding="8dp"
        android:text="10"
        app:drawableLeftCompat="@drawable/chat_unread"
        tools:text="0" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imVideo"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView3"
        android:drawablePadding="8dp"
        android:text="10"
        app:drawableLeftCompat="@drawable/mic"
        tools:text="0" />



    <View
        android:id="@+id/divBas"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="41dp"
        android:background="?android:attr/listDivider" />




</RelativeLayout>